extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= tit

    form.w3-container(method="POST")
      fieldset
        legend Dados do Aluno
        label Id
        input.w3-input.w3-round(type="text" name="id" readonly value=aluno._id)
        label Nome
        input.w3-input.w3-round(type="text" name="nome" value=aluno.nome)
        label Git
        input.w3-input.w3-round(type="text" name="git" value=aluno.git)

        fieldset
          legend TPC'S do Aluno
          each num in [1, 2, 3, 4, 5, 6, 7, 8]
            label TPC#{num}
            input.w3-check(type="checkbox" name=`tpc${num}` value="1" checked=aluno[`tpc${num}`] == true)

      br
      button.w3-btn.w3-purple.w3-mb-2(type="submit") Submeter
