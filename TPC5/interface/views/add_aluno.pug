extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= tit

    // Formul√°rio para adicionar o aluno
    form.w3-container(method="POST")
      fieldset
        legend Dados do Aluno

        label Identificador
        input.w3-input.w3-round(type="text" name="_id" required)

        label Nome
        input.w3-input.w3-round(type="text" name="nome" required)

        label Git
        input.w3-input.w3-round(type="text" name="git" required)

        // TPCs do Aluno
        fieldset
          legend TPC's do Aluno
          each num in [1, 2, 3, 4, 5, 6, 7, 8]
            label TPC#{num}
            input.w3-check(type="checkbox" name=`tpc${num}` value="1")

      br
      button.w3-btn.w3-purple.w3-mb-2(type="submit") Adicionar
