extends layout

block content
    .w3-card-4 
        header.w3-container.w3-blue 
            h1= tit
        .w3.container
            table.w3-table-all 
                tr 
                    th ID Contrato
                    th Objeto do Contrato
                    th Data de Celebração
                    th Preço Contratual
                each entidade in entidades 
                    tr 
                        td= entidade._id
                        td= entidade.objectoContrato
                        td= entidade.dataCelebracaoContrato   
                        td= entidade.precoContratual 

            .w3-row
                .w3-col.s12
                    div.w3-container.w3-green
                        h3 Total de Preço Contratual: #{soma}

        footer.w3-container.w3-blue
            address(style="display: inline-block; margin-right: 20px;") Generated by EW2025 class
            a(href="/").w3-button.w3-white Voltar
